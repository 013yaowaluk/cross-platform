<UI>:
    id:scr_manager
    Scr_knowledge:
    Scr_bmi:

############หน้าที่1#############        
<Scr_knowledge>:
    name: "Scr_knowledge"
    BoxLayout:        
        orientation: 'vertical'
        Image:
            source: "2222.jpg"  
        Button:
            text: 'คำนวณ'
            font_name:"tahoma"
            on_press: app.root.current = "Scr_bmi"
            size_hint: 0.5, 0.3
            pos_hint: {'x': 0.25, 'y': 0.90}
            background_normal:"ปุ่ม.png"       

############หน้าที่2#############           
<Scr_bmi>:
    name: "Scr_bmi"
    BoxLayout:
        orientation: 'vertical'
        TextInput:
            id:txt_weight
            hint_text:"น้ำหนัก"
            font_size:"25"
            font_name:"tahoma"
            size_hint: 1, 0.35
            readonly:True  
        Slider:
            id: slider_weight
            min:30
            max:100
            step:0.5
            set:40
            on_value: txt_weight.text=str(slider_weight.value)            
        TextInput:
            id:txt_height
            hint_text:"ส่วนสูง"
            font_size:"25"
            font_name:"tahoma"
            size_hint: 1, 0.35
            readonly:True  
        Slider:
            id: slider_height
            min:100
            max:200
            step:1
            set:150
            on_value: txt_height.text=str(slider_height.value)                
        Button:
            id:btn_bmi
            on_press: root.cal_bmi() #ผูกฟังก์ชั่น cal_bmi ไม่ส่งค่าใดๆ
            text: "BMI"
            font_size:"25"
            size_hint: 1, 0.35
            background_color:"#9932CC"
        Label:
            id:lbl_bmi
            text:"BMI =" 
            font_size:"25"
            size_hint: 1, 0.35 
        Image:
            id:img_bmi
                          
        
         
            
    
